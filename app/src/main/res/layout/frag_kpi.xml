<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/btn_fab"
        android:visibility="visible"
        android:src="@drawable/filter"
        android:layout_alignParentEnd="true" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_box"
    android:layout_margin="2dp"
    android:layout_below="@+id/btn_fab"
    android:id="@+id/lay_filter"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Station"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <Button
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="All"
                android:background="@drawable/dialog_box"
                android:textColor="@color/black"
                android:id="@+id/btn_station_all"/>

            <Spinner
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/spn_specific_lines"
                android:entries="@array/metro_lines"/>

                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:id="@+id/spn_metrostation"
                    android:entries="@array/metro_station_list"/>

            </LinearLayout>
        </HorizontalScrollView>




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MODE"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="All"
                    android:id="@+id/btn_mode_all"
                    android:background="@drawable/dialog_box"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"/>


                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Auto"
                    android:id="@+id/btn_mode_auto"
                    android:background="@drawable/dialog_box"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"/>



                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="E-Rikshaw"
                    android:id="@+id/btn_mode_rikshaw"
                    android:background="@drawable/dialog_box"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"/>

                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Mini Bus"
                    android:id="@+id/btn_mode_bus"
                    android:background="@drawable/dialog_box"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>
        </HorizontalScrollView>




    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TIME"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="DAte"
                    android:id="@+id/btn_time_date"
                    android:background="@drawable/dialog_box"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"/>

                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:entries="@array/metro_station_list"/>

                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:entries="@array/metro_station_list"/>

            </LinearLayout>
        </HorizontalScrollView>




    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TRIP TYPE"
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="Both"
                android:id="@+id/btn_type_both"
                android:background="@drawable/dialog_box"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"/>

                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="First Mile"
                    android:background="@drawable/dialog_box"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"/>

                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Last Mile"
                    android:background="@drawable/dialog_box"
                    android:textColor="@color/black"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lay_param"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/lay_filter">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Select Parameter"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spn_parameter" />
    </LinearLayout>



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/iv_graph"/>


</RelativeLayout>